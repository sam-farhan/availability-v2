<!DOCTYPE html>
<html lang="en">
<%- include('../../partials/head'); %>

    <body>
        <%- include('../../partials/header'); %>
        <main>
            <div class="container">
                <div id="alertPlaceholder"></div>
                <form onsubmit="submitForm(event)" method="post" action="/auth/reset/<%=hash%>" class="needs-validation row g-3 d-flex justify-content-center">
                    <div class="col-md-6">
                        <h1>Reset password</h1>
                        <div class="form-group form-floating mb-2">
                            <input type="password" class="form-control" id="password" name="password" placeholder="Password" required oninput="passwordConfirmMatching(event, this)">
                            <label for="password">Password</label>
                            <div id="password-feedback" class="invalid-feedback">
                                Invalid feedback.
                            </div>
                        </div>
                        <div class="form-group form-floating mb-2">
                            <input type="password" class="form-control" id="passwordConfirm" name="passwordConfirm" placeholder="Password" required oninput="passwordConfirmMatching(event, this)">
                            <label for="passwordConfirm">Password (confirm)</label>
                            <div id="passwordConfirm-feedback" class="invalid-feedback">
                                Invalid feedback.
                            </div>
                        </div>
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-primary">Reset</button>
                        </div>
                    </div>
                </form>
            </div>
        </main>

        <%- include('../../partials/footer'); %>

        <script src="/scripts/auth/resetPasswordScripts.js" type="text/javascript"></script>
        <script src="/scripts/utility/alertUtils.js" type="text/javascript"></script>
    </body>
</html>