{
  "name": "availability",
  "version": "1.0.0",
  "description": "Availability app for scheduling trainings.",
  "main": "app.js",
  "scripts": {
    "clean": "rimraf dist",
    "test": "jest",
    "dev": "run-p watch-scss watch-server",
    "test-coverage": "jest --coverage",
    "watch-server": "npx nodemon -e ts,js,ejs,json,css src/app.ts",
    "start": "ts-node dist/src/app.js",
    "compile-scss": "sass src/public/style/custom.scss:src/public/style/custom_bootstrap.css",
    "watch-scss": "sass --watch --style=compressed src/public/style/custom.scss:src/public/style/custom_bootstrap.css",
    "build": "npm run clean && npm run compile-scss && tsc",
    "postbuild": "copyfiles -u 1 src/**/*.{ejs,css,css.map,ico,js} dist/src/"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.10",
    "@types/jest": "^29.5.3",
    "@types/pg": "^8.11.0",
    "@types/serve-favicon": "^2.5.7",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.49.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "bootstrap": "^5.3.1",
    "connect-livereload": "^0.6.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "kysely": "^0.27.2",
    "livereload": "^0.9.3",
    "moment": "^2.29.4",
    "mysql": "^2.18.1",
    "pg": "^8.11.3",
    "sass": "^1.66.1",
    "serve-favicon": "^2.5.0"
  }
}
