<!DOCTYPE html>
<html lang="en">
<%- include('../../partials/head'); %>

    <body>
        <%- include('../../partials/header'); %>
            <main>
                <div class="container">
                    <div id="alertPlaceholder"></div>
                    <form onsubmit="submitForm(event)" method="post" action="/auth/signin/" class="needs-validation row g-3 d-flex justify-content-center">
                        <div class="col-md-6">
                            <h1>Sign-in</h1>
                            <div class="form-group form-floating mb-2">
                                <input type="text" class="form-control" id="username" name="username" placeholder="Username" required value="test">
                                <label for="username">Username</label>
                                <div id="username-feedback" class="invalid-feedback">
                                    Invalid feedback.
                                </div>
                            </div>
                            <div class="form-group form-floating mb-2">
                                <input type="password" class="form-control" id="password" name="password" placeholder="Password" required value="Test123!">
                                <label for="password">Password</label>
                                <div id="password-feedback" class="invalid-feedback">
                                    Invalid feedback.
                                </div>
                            </div>
                            <div class="d-flex justify-content-center mb-2">
                                <i>
                                    Don't have an account yet? <a href="/auth/signup">Sign up</a>.
                                </i>
                            </div>
                            <div class="d-flex justify-content-center">
                                <button type="submit" class="btn btn-primary">Sign in</button>
                            </div>
                        </div>
                    </form>
                </div>
            </main>

            <%- include('../../partials/footer'); %>

            <script src="/scripts/auth/authPageScripts.js" type="text/javascript"></script>
            <script src="/scripts/utility/alertUtils.js" type="text/javascript"></script>
    </body>
</html>