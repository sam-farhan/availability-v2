<!DOCTYPE html>
<html lang="en">
<%- include('../../partials/head'); %>

    <body>
        <%- include('../../partials/header'); %>
        <main>
            <div class="container">
                <h1>Week <%=week;%></h1>
                <h4><%=momentWeek.clone().day(1).format("dddd, MMMM Do")%> - <%=momentWeek.clone().day(7).format("dddd, MMMM Do")%></h4>

                <div class="grid availability-grid">
                    <!-- Header row showing day names. -->
                    <div class="row text-center align-items-center">
                        <%
                        for (let i = 1; i <= 7; i++) {
                            const day = momentWeek.clone().add(i, "days");
                            %>
                            <div class="col" onclick="onClickDay(this)" data-day="<%=i;%>">
                                <span class="d-none d-md-block">
                                    <%=day.format("dddd Do");%>
                                </span>
                                <span class="d-md-none">
                                    <%=day.format("ddd");%>
                                </span>
                            </div>
                        <%
                        }
                        %>
                    </div>
                    <%
                    for (let slot = 0; slot < (17 * 2) - 1; slot++) {
                        minute = 360 + (slot * 30);
                        %>
                        <div class="row text-center align-items-center">
                            <%
                            for (let day = 1; day <= 7; day++) {
                                const halfHour = momentWeek.clone().add(day, "days");
                                halfHour.add(minute, "minutes");
                                const slotData = {
                                    day: day,
                                    time: halfHour
                                };
                                const dataString = JSON.stringify(slotData);
                                %>
                                <div class="col availability-slot" id="slot-day-<%=day;%>-index-<%=slot%>" onclick="onClickTimeSlot(event, this)" data-index="<%=slot%>" data-slot="<%=dataString;%>">
                                    <span class="d-none d-md-block">
                                        <%=halfHour.format("kk:mm");%>
                                    </span>
                                    <span class="d-md-none">
                                        <%=halfHour.format("kk:mm");%>
                                    </span>
                                </div>
                            <%
                            }
                            %>
                        </div>
                    <%
                    }
                    %>
                </div>
                <div class="d-flex justify-content-center mt-4 mb-4">
                    <button onclick="onClickSaveHours(event, this)" type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </main>

        <!-- <%- include('../../partials/footer'); %> -->
        <script src="/scripts/availability/availabilityFormScripts.js" type="text/javascript"></script>
    </body>
</html>