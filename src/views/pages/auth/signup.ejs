<!DOCTYPE html>
<html lang="en">
<%- include('../../partials/head'); %>

    <body>
        <%- include('../../partials/header'); %>
            <main>
                <div class="container">
                    <div id="alertPlaceholder"></div>
                    <form onsubmit="submitForm(event)" method="post" action="/auth/signup/" class="needs-validation row g-3 d-flex justify-content-center">
                        <div class="col-md-6">
                            <h1>Sign-up</h1>
                            <div class="form-group form-floating mb-2">
                                <input type="email" class="form-control" id="email" name="email" placeholder="E-mail" required value="test@test.test">
                                <label for="email">E-mail address</label>
                                <div id="email-feedback" class="invalid-feedback">
                                    Invalid feedback.
                                </div>
                            </div>
                            <div class="form-group form-floating mb-2">
                                <input type="text" class="form-control" id="username" name="username" placeholder="Username" required value="test">
                                <label for="username">Username</label>
                                <div id="username-feedback" class="invalid-feedback">
                                    Invalid feedback.
                                </div>
                            </div>
                            <div class="form-group form-floating mb-2">
                                <input type="password" class="form-control" id="password" name="password" placeholder="Password" required value="Test123!">
                                <label for="password">Password</label>
                                <div id="password-feedback" class="invalid-feedback">
                                    Invalid feedback.
                                </div>
                            </div>
                            <div class="d-flex justify-content-center mb-2">
                                <i>
                                    Already have an account? <a href="/auth/signin">Sign in</a>.
                                </i>
                            </div>
                            <div class="d-flex justify-content-center">
                                <button type="submit" class="btn btn-primary">Sign up</button>
                            </div>
                        </div>
                    </form>
                </div>
            </main>

            <%- include('../../partials/footer'); %>

            <script src="/scripts/auth/authPageScripts.js" type="text/javascript"></script>
            <script src="/scripts/utility/alertUtils.js" type="text/javascript"></script>
    </body>
</html>