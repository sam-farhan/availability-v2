<!DOCTYPE html>
<html lang="en">
<%- include('../../partials/head'); %>

    <body>
        <%- include('../../partials/header'); %>
            <main>
                <div class="container">
                    <div id="alertPlaceholder"></div>
                    <form onsubmit="submitForm(event)" method="post" action="/squad/create/" class="needs-validation row g-3 d-flex justify-content-center">
                        <div class="col-md-6">
                            <h1>Create squad</h1>
                            <div class="form-group form-floating mb-2">
                                <input type="text" class="form-control" id="name" name="name" placeholder="Name" required>
                                <label for="name">Squad name</label>
                                <div id="name-feedback" class="invalid-feedback">
                                    Invalid feedback.
                                </div>
                            </div>
                            <div class="d-flex justify-content-center">
                                <button type="submit" class="btn btn-primary">Create</button>
                            </div>
                        </div>
                    </form>
                </div>
            </main>

            <%- include('../../partials/footer'); %>

            <script src="/scripts/squad/squadCreatePageScripts.js" type="text/javascript"></script>
            <script src="/scripts/utility/alertUtils.js" type="text/javascript"></script>
    </body>
</html>